{
  "name": "hardhat-token-deployer",
  "version": "1.0.0",
  "description": "Hardhat project for deploying custom tokens",
  "main": "index.js",
  "scripts": {
    "deploy": "npx hardhat run scripts/deploy-simple.js --network chilizSpicy",
    "deploy:tip": "npx hardhat run scripts/deploy-creator-tip.js --network chilizSpicy",
    "deploy:local": "npx hardhat run scripts/deploy-token.js --network localhost",
